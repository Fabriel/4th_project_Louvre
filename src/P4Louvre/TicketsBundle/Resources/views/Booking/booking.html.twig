{% extends "P4LouvreTicketsBundle::layout.html.twig" %}
{% set bookingPage = true %}

{% block title %}{{ parent () }} - Billetterie{% endblock %}

{% block content %}

    <div class="inner cover">
        <h1>Achat de billets</h1>

        <div class="lead" style="text-align: center;">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(form) }}

            <div class="form-group">
                <span style="text-align: center; font-size: 0.85em; font-style: italic; color: orange;">{{ form_errors(form.ticketDate) }}</span>
                {{ form_label(form.ticketDate, "Date de la visite :", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(form.ticketDate, {'attr': {'class': 'form-control',
                        'class': 'js-datepicker-visit',
                        'style': 'color: black;'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                <span style="text-align: center; font-size: 0.85em; font-style: italic; color: orange;">{{ form_errors(form.email) }}</span>
                {{ form_label(form.email, "Adresse email :", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <span style="text-align: center; font-size: 0.85em; font-style: italic; color: orange;">{{ form_errors(form.ticketType) }}</span>
                {{ form_label(form.ticketType, "Type de billet(s) :", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                {{ form_errors(form.ticketType) }}
                <div class="col-sm-3">
                    {{ form_widget(form.ticketType, {'attr': {'class': 'form-control',
                        'value': 'Journée'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                <span style="text-align: center; font-size: 0.85em; font-style: italic; color: orange;">{{ form_errors(form.totalNbTickets) }}</span>
                {{ form_label(form.totalNbTickets, "Nombre total de billet(s) :", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                <div class="col-sm-2">
                    {{ form_widget(form.totalNbTickets, {'attr': {
                        'class': 'form-control',
                        'style': 'max-width: 100px; text-align: center; margin: auto'
                    }}) }}
                </div>
            </div>

            <br />
            <p style="text-align: center; font-size: 0.85em; font-style: italic; text-decoration: underline;">Tous les champs doivent impérativement être renseignés.</p>
            <br />

            <div class="form-group" style="text-align: center;">
                <button type="submit" class="btn btn-primary" style="font-weight: bold; font-size: 1em;">Poursuive la commande</button>
            </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
